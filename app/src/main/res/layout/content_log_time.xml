<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_log_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.github.goobynater.runningperformance.LogTime"
    tools:showIn="@layout/activity_log_time">


    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getTimes"
        android:elevation="0dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="11dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Enter Your Personal Records for your Events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prompt"
        android:textSize="18sp"
        android:textAlignment="center"
        android:fontFamily="monospace"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/timetf1"
        android:hint="Type in Time"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/getTimes"
        android:layout_centerHorizontal="true" />

    <EditText
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/timetf5"
        android:hint="Type in Time"
        android:layout_above="@+id/timetf4"
        android:layout_alignStart="@+id/timetf2" />

    <TextView
        android:text="5000m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fivekprompt"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/timetf5"
        android:layout_alignBottom="@+id/timetf5"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="1600m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mileprompt"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/timetf3"
        android:layout_alignBottom="@+id/timetf3"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="3200m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twomileprompt"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/timetf4"
        android:layout_alignBottom="@+id/timetf4"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="800m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eightprompt"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/timetf2"
        android:layout_alignBottom="@+id/timetf2"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="400m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fourprompt"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/timetf1"
        android:layout_alignBottom="@+id/timetf1"
        android:layout_alignParentStart="true" />

    <EditText
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/timetf3"
        android:hint="Type in Time"
        android:layout_above="@+id/timetf2"
        android:layout_alignStart="@+id/timetf2" />

    <EditText
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/timetf4"
        android:hint="Type in Time"
        android:layout_above="@+id/timetf3"
        android:layout_alignStart="@+id/timetf3" />

    <EditText
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/timetf2"
        android:hint="Type in Time"
        android:layout_above="@+id/timetf1"
        android:layout_alignStart="@+id/timetf1" />

</RelativeLayout>
